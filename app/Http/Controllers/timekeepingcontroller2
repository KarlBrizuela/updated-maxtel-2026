        try {
                DB::connection("intra_payroll")->table("lib_ot_table")
                ->where('id', $request->id)
                ->update([
                    "rate" => $request->rate
                ]);
            
                DB::commit();
            return json_encode("Success");
        } catch (\Throwable $th) {
